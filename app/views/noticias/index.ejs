<!DOCTYPE html>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    

<div class="container">

    
        <h1 class="display-3 text-center mt-2">News List</h1>
  

    <div class="row">
    <a class="btn btn-success mb-2 mt-3" href="/noticias/nova-noticia">New News</a>
    <% if(typeof noticias != "undefined") { %>
        <table class="table table-striped">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Actions</th>
            </tr>
            
                <% for(var i = 0; i < noticias.length; i++) {%>
                    <tr>
                        <td><%= noticias[i].id %></td>
                        <td><a href="/noticias/<%= noticias[i].id %>"><%= noticias[i].titulo %></a></td>
                        <td><%= noticias[i].resumo %></td>
                        <td>
                            <a style="display:inline-block" class="btn btn-primary margin-left-2" href="/noticias/edit/<%= noticias[i].id %>">Edit</a>
                            <!--
                                <form style="display:inline-block"  action="<%= '/noticias/delete/' + noticias[i].id %>" method="post">
                                    <button  type="submit" class="btn btn-danger margin-left-2">Delete</button>
                                </form>
                            -->
                            <a style="display:inline-block" class="btn btn-danger margin-left-2" href="/noticias/delete/<%= noticias[i].id %>">Delete</a>
                        </td>
                    </tr>
                <% } %>
        </table>
    <% } %>
    <% if(typeof noticias == "undefined" || noticias.length < 1) {%>
    <h1>No news here</h1>
    <% } %>
    </div>    
</div>
    
</body>
</html>