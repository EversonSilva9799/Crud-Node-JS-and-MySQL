<html>

<head>

<meta charset="utf-8">
<title>Nova Notícia</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

</head>
<body>

<% if(typeof erros != 'undefined' ) {%>
    <div class="alert alert-danger ">
        <div class="container">
            <ul>
            <% for(var i = 0; i < erros.length; i++) {  %>
                <li class="list-unstyled"><%= erros[i].msg  %></li>
            <% }%>
            </ul> 
        </div>
    </div>
<% }%>

<div class="container">
    <h1 class="text-center">Create News</h1>
    <form action="/noticias/salvar" method="post">
        <div class="form-group">
            <label>Título</label>
            <input type="text" class="form-control" name="titulo" value="<%= noticia.titulo %>" placeholder="Título da notícia">
        </div>

        <div class="form-group">
            <label>Resumo</label>
            <input type="text" class="form-control" name="resumo" value="<%= noticia.resumo %>" placeholder="Resumo da notícia">
        </div>

        <div class="form-group">
            <label>Autor</label>
            <input type="text" class="form-control" name="autor" value="<%= noticia.autor %>" placeholder="Autor da notícia">
        </div>

        <div class="form-group">
            <label>Data da Notícia</label>
            <input type="date" class="form-control" name="data_noticia" value="<%= noticia.data_noticia %>" placeholder="Data da notícia">
        </div>

        <label>Notícia</label>
        <textarea name="noticia" class="form-control"><%= noticia.noticia %></textarea>

        <button type="submit" class="btn btn-primary mt-3">Criar</button>
    <form>
    <a class="btn btn-link" href="/noticias">Voltar</a>
</div>

</body>


</html>